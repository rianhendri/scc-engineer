<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="320dp"
	android:layout_height="450dp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/dwhite"
	android:orientation="vertical">
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fontFamily="@font/segoeuii"
		android:text="Input manual"
		android:paddingLeft="12dp"
		android:layout_marginTop="12dp"
		android:layout_marginBottom="8dp"
		android:textSize="11sp"/>
	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:background="@color/green">

		<TextView

			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="8dp"
			android:layout_weight="1"
			android:fontFamily="@font/segoeui"
			android:text="Item Cd"
			android:textColor="@color/dwhite"
			android:textSize="11dp" />
		<TextView

			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="8dp"
			android:layout_weight="1"
			android:fontFamily="@font/segoeui"
			android:text="Nama Item"
			android:textColor="@color/dwhite"
			android:textSize="11dp" />
		<TextView

			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/segoeui"
			android:textSize="11dp"
			android:text="QTY "
			android:gravity="center"
			android:textColor="@color/dwhite"/>

		<TextView
			android:visibility="visible"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="8dp"
			android:maxWidth="100dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/segoeui"
			android:textSize="11dp"
			android:text="Reason"
			android:gravity="center"
			android:layout_weight="1"
			android:textColor="@color/dwhite"/>

		<TextView
			android:visibility="gone"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="8dp"
			android:layout_weight="1"
			android:fontFamily="@font/segoeui"
			android:maxWidth="100dp"
			android:text="Case ID"
			android:textColor="@color/dwhite"
			android:textSize="11dp" />

		<ImageView

			android:layout_width="30dp"
			android:layout_height="15dp"



			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:visibility="visible"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:background="@color/dwhite">
				<EditText
					android:id="@+id/codecda"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="4dp"
					android:layout_marginTop="2dp"
					android:layout_marginBottom="2dp"
					android:fontFamily="@font/segoeui"
					android:textSize="11dp"
					android:layout_weight="1"
					android:maxLines="10"
					android:text=""
					android:textColor="@color/black"/>
				<EditText
					android:id="@+id/namespara"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="4dp"
					android:layout_marginTop="2dp"
					android:layout_marginBottom="2dp"
					android:fontFamily="@font/segoeui"
					android:textSize="11dp"
					android:layout_weight="1"
					android:maxLines="10"
					android:text=""
					android:textColor="@color/black"/>
				<EditText
					android:id="@+id/qtyspera"
					android:layout_width="50dp"
					android:inputType="number"
					android:digits="0123456789"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="8dp"
					android:layout_marginTop="2dp"
					android:layout_marginBottom="2dp"
					android:fontFamily="@font/segoeui"
					android:textSize="11dp"
					android:gravity="center"
					android:text=""
					android:textColor="@color/black"/>
				<EditText
					android:visibility="visible"
					android:id="@+id/reasona"
					android:gravity="center"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="8dp"
					android:maxWidth="100dp"
					android:layout_marginTop="2dp"
					android:layout_marginBottom="2dp"
					android:fontFamily="@font/segoeui"
					android:textSize="11dp"
					android:text=""
					android:layout_weight="1"
					android:maxLength="100"
					android:textColor="@color/black"/>
				<EditText
					android:visibility="gone"
					android:id="@+id/caseid"
					android:layout_width="100dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="8dp"
					android:layout_marginTop="2dp"
					android:layout_marginBottom="2dp"
					android:fontFamily="@font/segoeui"
					android:textSize="11dp"
					android:text=""
					android:maxWidth="100dp"
					android:maxLength="100"
					android:layout_weight="1"
					android:textColor="@color/black"/>

				<ImageView
					android:id="@+id/editebtna"
					android:layout_width="30dp"
					android:layout_height="20dp"


					android:src="@drawable/ic_plus2" />
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/softgrey"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				/>
		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/search_btn"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/bgwhite_cornerblue"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="14dp"
		android:visibility="visible" >

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="12dp"
			android:src="@drawable/ic_searchic" />

		<EditText
			android:id="@+id/searchitem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/background_transparent"
			android:focusableInTouchMode="true"
			android:fontFamily="@font/segoeui"
			android:hint="search..."
			android:textSize="14sp" />
	</LinearLayout>
	<LinearLayout
		android:layout_marginTop="12dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:background="@color/green">

		<TextView
			android:id="@+id/codecd"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="8dp"
			android:layout_weight="1"
			android:fontFamily="@font/segoeui"
			android:text="Item Cd (Nama)"
			android:textColor="@color/dwhite"
			android:textSize="11dp" />

		<TextView

			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/segoeui"
			android:textSize="11dp"
			android:text="QTY "
			android:gravity="center"
			android:textColor="@color/dwhite"/>

		<TextView
	android:visibility="visible"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="8dp"
			android:maxWidth="100dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			android:fontFamily="@font/segoeui"
			android:textSize="11dp"
			android:text="Reason"
			android:gravity="center"
			android:layout_weight="1"
			android:textColor="@color/dwhite"/>

		<TextView
			android:visibility="gone"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="8dp"
			android:layout_weight="1"
			android:fontFamily="@font/segoeui"
			android:maxWidth="100dp"
			android:text="Case ID"
			android:textColor="@color/dwhite"
			android:textSize="11dp" />

		<ImageView
			android:id="@+id/edite"
			android:layout_width="30dp"
			android:layout_height="15dp"



			/>
	</LinearLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/listadditemfoc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_weight="1"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:padding="8dp" />

		<ProgressBar
			android:id="@+id/loadingfooter"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
