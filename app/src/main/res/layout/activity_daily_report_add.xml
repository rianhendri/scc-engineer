<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dwhite"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="19dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="0dp"
                android:gravity="left"
                android:src="@drawable/back_white" />

            <TextView
                android:id="@+id/title_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="64dp"
                android:fontFamily="@font/seguisb"
                android:gravity="center_vertical"
                android:text="Add Daily Report"
                android:textColor="@color/dwhite"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollnya"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:background="@color/colorPrimaryDark"
                android:elevation="5dp" >

                <ImageView
                    android:id="@+id/imgbanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp" >
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/backgroundalert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:background="@color/colorPrimaryDark">
                    <TextView
                        android:id="@+id/textalert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="@string/title_Requestno"
                        android:textColor="@color/dwhite"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Case Id"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/caseid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Report date"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/reportdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Press"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/presssn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Case Progress "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/caseprogress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="Lorem Ipsum"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Press Status"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/pressstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="Lorem Ipsum"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Ticket Untuk "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/ticketlink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Service Type "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/servicetype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="@font/segoeui"
                        android:paddingLeft="4dp"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="4dp"
                        android:background="@color/softgrey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Temuan  "
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <LinearLayout
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tittle_temuan"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp">
                        <LinearLayout
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/no"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/seguisb"
                                android:textSize="12sp"
                                android:text=" "

                                android:textColor="@color/black"/>
                            <EditText
                                android:id="@+id/inputtemuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:textSize="12sp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/tambahtemuan"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_plus2"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/temuanlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/addform"
                        android:scrollbars="none"
                        android:nestedScrollingEnabled="false" >
                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Tindakan "
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <LinearLayout
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/titile_actiontakendaily"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"
                            android:text=" "

                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/inputaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:textSize="12sp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/tambahaction"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_plus2"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tindakanlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/addform"
                        android:scrollbars="none"
                        android:nestedScrollingEnabled="false" >
                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Langkah Lanjutan "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_followup"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"
                            android:text=" "

                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/inputfollow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui"
                            android:textSize="12sp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:id="@+id/tambahfollow"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_plus2"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/langkahlanjutanlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/addform"
                        android:scrollbars="none"
                        android:nestedScrollingEnabled="false" >
                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Created By "
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/createdby"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@+id/addform"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        android:scrollbars="none" >
                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/seguisb"
                        android:paddingLeft="4dp"
                        android:text="Sparepart "
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                    <LinearLayout
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sparepart Name"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Quantity"
                            android:textColor="@color/dwhite"
                            android:fontFamily="@font/seguisb"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/sperpartdaily"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@+id/addform"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="12dp"
                        android:scrollbars="none" >
                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
                <TextView
                    android:id="@+id/send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_cornerblue"
                    android:fontFamily="@font/seguisb"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="Add Report"
                    android:textColor="@color/dwhite"
                    android:layout_margin="54dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
