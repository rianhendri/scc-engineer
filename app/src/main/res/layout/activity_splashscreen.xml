<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/backgourndgrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:paddingBottom="25dp">
        <ImageView android:layout_width="250dp"
            android:layout_height="185dp"
            android:src="@drawable/logosplash" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuib"
            android:textColor="@color/darkgrey2"
            android:gravity="center"
            android:text="Engineer"
            android:textSize="25sp"/>
        <ImageView android:layout_width="200dp"
            android:layout_height="85dp"
            android:src="@drawable/logoblack_samafitro" />
    </LinearLayout>

</LinearLayout>
